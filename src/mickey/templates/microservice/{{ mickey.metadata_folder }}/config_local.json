{
  "service_config": {
    "loader_config": {
      "base": ["{{ vars.package_name }}"]
    },
    "service_loader": "base",
    "hmd_db_engines": {
      "postgres": {
        "engine_type": "postgres",
        "engine_config": {
          "host": "db",
          "user": "{{vars.package_name}}",
          "password": "{{vars.package_name}}",
          "db_name": "{{vars.package_name}}"
        }
      }
    },
    "hmd_entity_config": {
      "__default__": {
        "persistence": ["postgres"]
      }
    },
    "operations_modules": [
      "hmd_ms_base.crud_operations",
      "{{ vars.package_name }}.operations"
    ]
  }
}
